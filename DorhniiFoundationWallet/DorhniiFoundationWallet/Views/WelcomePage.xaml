<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DorhniiFoundationWallet.Views.WelcomePage"
             xmlns:resource="clr-namespace:DorhniiFoundationWallet.Resources"
             xmlns:vm="clr-namespace:DorhniiFoundationWallet.ViewModels"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <vm:WelcomeVM/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
            <Grid HorizontalOptions="FillAndExpand" Margin="50,0,50,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".3*"/>
                    <RowDefinition Height=".4*"/>
                    <RowDefinition Height=".3*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Spacing="0" VerticalOptions="Center">
                    <Image Source="{Binding AppIcon}" Aspect="AspectFit" Style="{StaticResource AppIconImageStyle}"/>
                </StackLayout>
                <Grid Grid.Row="1" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label  Grid.Row="0" Text="{x:Static resource:Resource.txtWecomeText}" Style="{StaticResource CenterBlackLabelStyle}" Margin="0,0,0,20"/>
                    <Button Grid.Row="1" Text="{x:Static resource:Resource.txtCreate}" Command="{Binding CreateButtonCommand}" Style="{StaticResource SteelBlueButtonsStyle}" />
                    <Button Grid.Row="2" Text="{x:Static resource:Resource.txtRestore}" Command="{Binding RestoreButtonCommand}" Style="{StaticResource SteelBlueButtonsStyle}"/>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>