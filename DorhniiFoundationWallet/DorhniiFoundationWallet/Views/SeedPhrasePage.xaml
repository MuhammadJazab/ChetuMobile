<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:DorhniiFoundationWallet.ViewModels"
             xmlns:resource="clr-namespace:DorhniiFoundationWallet.Resources" xmlns:View="clr-namespace:DorhniiFoundationWallet.Views"
             NavigationPage.HasNavigationBar="False"
             x:Class="DorhniiFoundationWallet.Views.SeedPhrasePage">
    <ContentPage.BindingContext>
        <vm:ViewSeedPhraseVM x:Name="vm"/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource Black}">
            <Grid Grid.Row="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height=".3*"/>
                    <RowDefinition Height=".4*"/>
                    <RowDefinition Height=".1*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="{x:Static resource:Resource.txtSeedPhraseCapital}" Style="{StaticResource WhiteCenterLabelStyle}"/>
                <Frame Grid.Row="1" CornerRadius="10"  Margin="0,10,0,10" BackgroundColor="{StaticResource EntryGray}" HasShadow="false" />
                <FlexLayout Grid.Row="2" BindableLayout.ItemsSource="{Binding SeedList}" Wrap="Wrap" Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center" AlignContent="SpaceEvenly" BackgroundColor="Transparent">
                    <BindableLayout.ItemTemplate >
                        <DataTemplate  >
                            <Frame Padding="5" Margin="0,5,5,0"  CornerRadius="5"  BackgroundColor="#222020" HasShadow="False" BorderColor="{StaticResource EntryGray}" >
                                <Label Text="{Binding EntryText}" Style="{StaticResource WhiteCenterLabelStyle}" FontSize="18" />
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
                <StackLayout Grid.Row="3" Spacing="0" VerticalOptions="End" Orientation="Horizontal">
                    <ImageButton Grid.Row="0" Source="{Binding BackwardAppIcon}"  Command="{Binding BackCommand}"  HorizontalOptions="StartAndExpand"  CornerRadius="3" BackgroundColor="#222020" />
                    <ImageButton Grid.Row="0" Source="{Binding SaveSeedAppIcon}"  Command="{Binding SaveSeedCommand}"  HorizontalOptions="CenterAndExpand"  CornerRadius="3" BackgroundColor="#222020"/>
                    <ImageButton Grid.Row="0" Source="{Binding ForwardAppIcon}" Command="{Binding NextCommand}" HorizontalOptions="EndAndExpand"  CornerRadius="3" BackgroundColor="#222020" />
                </StackLayout>
            </Grid>
            <Grid Grid.Row="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="#5e5e5f" IsVisible="{Binding IsSaveSeedAlertVisible,Mode=TwoWay}">
                <Frame HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="350" CornerRadius="10" Margin="10" BorderColor="DarkGray" BackgroundColor="#28282a">
                    <Grid BackgroundColor="#28282a" Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackLayout Grid.Row="0" Orientation="Vertical" HorizontalOptions="Center" Padding="5">
                            <Label Text="{x:Static resource:Resource.txtSeedTitle1}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="Small" />
                            <Label Text="{x:Static resource:Resource.txtSeedPhraseCapital}" Style="{StaticResource WhiteCenterLabelStyle}"/>
                        </StackLayout>
                        <Frame Grid.Row="1" BackgroundColor="#5e5e5f" HorizontalOptions="FillAndExpand" CornerRadius="5" Background="#5e5e5f" >
                            <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="{x:Static resource:Resource.txtPrintDescription1}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11" />
                                <Label Grid.Row="1" Text="{x:Static resource:Resource.txtPrintDescription2}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11"/>
                                <Label Grid.Row="2" Text="{x:Static resource:Resource.txtPrintDescription3}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11"/>
                            </Grid>
                        </Frame>
                        <StackLayout Grid.Row="2" Margin="5" Orientation="Vertical" HorizontalOptions="Center">
                            <Label Text="{x:Static resource:Resource.txtSaveSeedAlert1}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11"/>
                            <Label Text="{x:Static resource:Resource.txtSaveSeedeAlert2}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11"/>
                            <Label Text="{x:Static resource:Resource.txtSaveSeedAlert3}" Style="{StaticResource WhiteCenterLabelStyle}" FontAttributes="None" FontSize="11"/>
                        </StackLayout>
                        <Button Grid.Row="3" Text="{x:Static resource:Resource.txtOk}" Command="{Binding OkButton}" TextColor="White" BackgroundColor="#1f1d1d" CornerRadius="5" HeightRequest="35" Margin="10" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
            </Grid>
            <View:Loader Grid.Row="0" IsVisible="{Binding IsLoading}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>