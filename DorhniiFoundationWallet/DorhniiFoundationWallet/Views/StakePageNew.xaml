                                    </Frame.GestureRecognizers>
                                </Frame>
                                <Frame Margin="0,0,0,20" Grid.Row="3" Grid.Column="1" Padding="0" HasShadow="True"  WidthRequest="120" HeightRequest="25" VerticalOptions="End" HorizontalOptions="EndAndExpand" CornerRadius="5" >
