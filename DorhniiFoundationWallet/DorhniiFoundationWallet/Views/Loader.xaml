<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DorhniiFoundationWallet.Views.Loader">
  <ContentView.Content>
        <StackLayout BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator x:Name="activity" Color="SkyBlue" BackgroundColor="Transparent" IsVisible="True" IsRunning="True">
                <ActivityIndicator.Scale>
                    <OnPlatform x:TypeArguments="x:Double" iOS="2.0" Android="1.0" />
                </ActivityIndicator.Scale>
            </ActivityIndicator>
        </StackLayout>
    </ContentView.Content>
</ContentView>